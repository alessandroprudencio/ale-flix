// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MediaType {
  MOVIE
  SERIES
  DOCUMENTARY
}

enum MediaStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum MediaRating {
  G
  PG
  PG13
  R
  NC17
}

enum UserRole {
  USER
  ADMIN
}

model Media {
  id           String     @id @default(cuid())
  title        String
  description  String
  thumbnailUrl String
  releaseYear  Int
  type         MediaType
  rating       Float
  duration     Int
  progress     Int?
  isFeatured   Boolean    @default(false)
  isPopular    Boolean    @default(false)
  releaseDate  DateTime?
  categories   Category[]
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  userRating   Float?     @default(0)
  viewCount    Int        @default(0)
  user         User       @relation(fields: [userId], references: [id])
  userId       String

  @@index([userId])
  @@index([type])
  @@index([releaseYear])
  @@index([isFeatured])
  @@index([isPopular])
  @@index([releaseDate])
  @@map("medias")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  media     Media[]

  @@index([email])
  @@map("users")
}

model Category {
  id    String  @id @default(cuid())
  name  String  @unique
  media Media[]

  @@map("categories")
}
