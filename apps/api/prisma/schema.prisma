// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MediaType {
  MOVIE
  SERIES
  DOCUMENTARY
}

enum MediaStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum MediaRating {
  G
  PG
  PG13
  R
  NC17
}

enum UserRole {
  USER
  ADMIN
}

model Media {
  id           String      @id @default(uuid())
  title        String
  description  String      @db.Text
  duration     Int
  releaseYear  String
  type         MediaType   @default(MOVIE)
  rating       MediaRating @default(PG13)
  genres       String[]
  directors    String[]
  cast         String[]
  thumbnailUrl String
  trailerUrl   String
  streamUrl    String
  status       MediaStatus @default(DRAFT)
  userRating   Float?      @default(0)
  viewCount    Int         @default(0)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  user         User        @relation(fields: [userId], references: [id])
  userId       String

  @@index([userId])
  @@index([genres])
  @@index([releaseYear])
  @@index([type])
  @@index([status])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  media     Media[]

  @@index([email])
}
